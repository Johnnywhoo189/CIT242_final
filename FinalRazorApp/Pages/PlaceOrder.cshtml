@page
@model PlaceOrderModel

<h2>Place a new order</h2>
<form method="post">
    <div class="form-group">
        <label for="SelectedProductId">Product</label>
        <select class="form-control" id="SelectedProductId" asp-for="SelectedProductId">
            <option value="">-- Select Product --</option>
            @foreach (var product in Model.Products)
            {
                <option value="@product.ProductId">@product.ProductName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="UnitPrice">Unit Price</label>
        <input type="text" class="form-control" id="UnitPrice" asp-for="UnitPrice" readonly />
    </div>
    <div class="form-group">
        <label for="Quantity">Quantity</label>
        <input type="number" class="form-control" id="Quantity" asp-for="Quantity" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
